# Django Settings
SECRET_KEY=your-secret-key-here
DEBUG=True # Set to False in production
HOST=127.0.0.1

# Google Maps API Configuration (for venue selection)
# Get your API key from: https://console.cloud.google.com/google/maps-apis
# Enable the following APIs:
#   - Maps JavaScript API
#   - Places API
GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here

# Database Configuration (PostgreSQL)
DB_NAME=ieum
DB_USER=ieum
DB_PASSWORD=ieum
DB_PORT=5432

# Email Configuration
EMAIL_PREFIX="[IEUM] " # Prefix for email subjects
EMAIL_FROM=noreply@example.com
EMAIL_HOST=smtp.example.com
EMAIL_HOST_USER=your-email@example.com
EMAIL_HOST_PASSWORD=your-email-password
EMAIL_PORT=587 # Change if necessary

# RabbitMQ Configuration
RABBITMQ_DEFAULT_USER=ieum
RABBITMQ_DEFAULT_PASS=ieum

# Additional Settings
ADMIN_PAGE_NAME=admin-page-please-change-me
DJANGO_ADMIN_PAGE_NAME=django-admin-page-please-change-me

# Default Superuser (created on first startup if no superuser exists)
# Note: Username will be the same as email
DJANGO_SUPERUSER_EMAIL=admin@example.com
DJANGO_SUPERUSER_PASSWORD=changeme123
DJANGO_SUPERUSER_FIRST_NAME=Admin
DJANGO_SUPERUSER_LAST_NAME=User
DJANGO_SUPERUSER_INSTITUTE=System

TOSS_CLIENT_KEY=your_toss_client_key_here
TOSS_SECRET_KEY=your_toss_secret_key_here